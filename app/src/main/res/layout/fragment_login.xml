<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.LoginFragment">

    <EditText
        android:id="@+id/et_log_login"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginTop="250dp"
        android:hint="Логин"
        android:textSize="16dp"
        android:background="@drawable/shape_rounded_stroke"
        android:paddingHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_log_password"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:hint="Пароль"
        android:textSize="16dp"
        android:inputType="textPassword"
        android:background="@drawable/shape_rounded_stroke"
        android:paddingHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_log_login"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_log_auth"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:text="Войти"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:background="@drawable/shape_rounded"
        app:backgroundTint="@color/accent"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_log_password"/>

    <TextView
        android:id="@+id/tv_log_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="или"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_log_auth"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_log_reg"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:text="Создать аккаунт"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:background="@drawable/shape_rounded"
        app:backgroundTint="@color/main"
        android:outlineSpotShadowColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_log_or"/>

</androidx.constraintlayout.widget.ConstraintLayout>