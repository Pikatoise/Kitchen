<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_profile_header"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/shape_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_profile_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exit"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="August"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_profile_exit"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile_exit"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp"
            android:paddingBottom="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_profile_header">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_avatar"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="250dp"
                app:cardElevation="0dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/accent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_profile_nick_letter"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        tools:text="A"
                        android:textColor="@color/white"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/iv_profile_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        tools:src="@drawable/test_dish"
                        android:scaleType="centerCrop"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_profile_edit"
                android:layout_width="240dp"
                android:layout_height="45dp"
                app:cardCornerRadius="100dp"
                app:strokeColor="@color/main"
                app:cardElevation="0dp"
                app:strokeWidth="2dp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mcv_avatar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Редактировать профиль"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_profile_likes_favorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mcv_profile_edit">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_profile_favorites"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:backgroundTint="@color/accent"
                    app:cardCornerRadius="150dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingStart="22dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_favorite"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Закладки"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/mcv_profile_likes"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/accent"
                    app:cardCornerRadius="150dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingStart="20dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="33dp"
                            android:src="@drawable/ic_like"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Лайки"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_profile_recipes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_profile_likes_favorites">
                <TextView
                    android:id="@+id/tv_profile_my_recipes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Мои рецепты"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/iv_profile_add_recipe"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_plus"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_profile_my_recipes"
                    app:layout_constraintBottom_toBottomOf="@id/tv_profile_my_recipes"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_profile_dish_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Пусто"
                android:visibility="visible"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_profile_recipes" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_profile_my_dishes"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_profile_recipes"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/dish_item"
                tools:itemCount="3"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>